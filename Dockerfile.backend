# Backend Dockerfile for Development
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy application code
COPY prisma ./prisma
COPY server ./server
COPY tsconfig.json ./

# Generate Prisma client
RUN npx prisma generate

EXPOSE 3000

CMD ["npm", "run", "server"]
