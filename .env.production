# ===========================================
# PLP Training Management System - Production Environment
# ===========================================

# Database Configuration (internal Docker network)
DATABASE_URL=postgresql://san_user:san_password@postgres:5432/san_training_app

# PostgreSQL Docker Configuration
POSTGRES_USER=san_user
POSTGRES_PASSWORD=san_password
POSTGRES_DB=san_training_app
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Backend Server Configuration
PORT=3000
BACKEND_PORT=3000

# JWT Configuration - IMPORTANT: Change this in production!
# Run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=change-this-to-a-secure-64-character-random-string-for-production
JWT_EXPIRES_IN=7d

# Frontend Configuration (API URL for nginx proxy)
VITE_API_URL=https://mentoring.sovathc.org:2001/api
FRONTEND_PORT=2000

# pgAdmin Configuration
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@plp.local
PGADMIN_PASSWORD=change-this-password-in-production

# CORS Configuration
ALLOWED_ORIGINS=https://mentoring.sovathc.org,https://mentoring.sovathc.org:2000,https://mentoring.sovathc.org:2001,http://localhost:2000,http://localhost:2001
